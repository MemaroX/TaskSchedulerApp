@model IEnumerable<TaskSchedulerApp.Models.Task1>

@{
    ViewData["Title"] = "Tasks";
}

<h1>Tasks</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Task Name
            </th>
            <th>
                Is Completed
            </th>
            <th>
                Due Date
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TaskName</td>
                <td>@item.IsCompleted</td>
                <td>@item.DueDate</td>
            </tr>
        }
    </tbody>
</table>
